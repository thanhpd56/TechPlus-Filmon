<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/vn.techplus.filmon"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/bg_menu"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        android:background="@color/bg_topbar_menu"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_fmedia_small" />

    <vn.techplus.filmon.customwidget.CustomTextView
        android:id="@+id/menuCMSServer"
        style="@style/TextViewMenu"
        android:text="@string/menu_cms_server"
        custom:customTypeFace="Gillsans.ttf" />

    <ImageView style="@style/ImageViewDivide" />

    <vn.techplus.filmon.customwidget.CustomTextView
        android:id="@+id/menuDeviceSN"
        style="@style/TextViewMenu"
        android:text="@string/menu_device_sn"
        custom:customTypeFace="Gillsans.ttf" />

    <ImageView style="@style/ImageViewDivide" />

    <vn.techplus.filmon.customwidget.CustomTextView
        android:id="@+id/menuTerm"
        style="@style/TextViewMenu"
        android:text="@string/menu_term"
        custom:customTypeFace="Gillsans.ttf" />

    <ImageView style="@style/ImageViewDivide" />

    <vn.techplus.filmon.customwidget.CustomTextView
        android:id="@+id/menuAbout"
        style="@style/TextViewMenu"
        android:text="@string/menu_about"
        custom:customTypeFace="Gillsans.ttf" />

    <ImageView style="@style/ImageViewDivide" />

</LinearLayout>